<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SIZZLE!</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body class="body">
  <div>
    <header class="header">
     <a href="/"> <img id="logoImg" href="/" src="/img/sizzle.png">
     </a> 
      <h1 class="logo" >
        <a id="headerTxt" href="/">IZZLE</a>
      </h1>
      <nav class="login">
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/home">profile</a> |
        <button class="no-button" id="logout">logout</button>
        {{else}}
        <a href="/login">login</a>
        {{/if}}
      </nav>
    </header>
    <main class="body container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>
      
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
